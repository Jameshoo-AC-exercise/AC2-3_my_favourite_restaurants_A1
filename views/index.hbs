<!-- search bar -->
<div class='container search-bar'>
  <div class='search-bar-outer'>
    <div class='search-bar-inner'>
      {{! router: /search }}
      <form action='/restaurants/search' class='row'>
        <h4 class='mb-2 col-12'>尋找餐廳：</h4>
        <div class='input-group col-6'>
          <input
            type='text'
            name='keyword'
            class='form-control'
            placeholder='輸入餐廳、分類'
            aria-label='Restaurant Name...'
            value='{{keyword}}'
            aria-describedby='search-button'
          />
          <div class='input-group-append'>
            <button class='btn btn-major' type='submit' id='search-button'><i
                class='fas fa-search'
              ></i></button>
          </div>
        </div>
        <div class='input-group col-6'>
          <select
            class='form-control form-select'
            id='sort'
            name='sort'
            onchange='this.form.submit()'
          >
            <option value='name_en asc' {{ifEqual sort 'name_en asc'}}>A > Z</option>
            <option value='name_en desc' {{ifEqual sort 'name_en desc'}}>Z > A</option>
            <option
              value='category asc'
              {{ifEqual sort 'category asc'}}
            >類別</option>
            <option
              value='location asc'
              {{ifEqual sort 'location asc'}}
            >地區</option>
          </select>
        </div>
      </form>
    </div>
  </div>
</div>

{{#if restaurants}}
  <!-- restaurant list -->
  <div class='container mt-5'>
    <div class='row'>
      <div class='col-md-10 col-12 mx-auto'>
        <div class='card-columns'>
          {{#each restaurants}}
            <a href='/restaurants/{{this._id}}' class='text-secondary'>
              <div class='card mb-3'>
                <img
                  class='card-img-top'
                  src='{{this.image}}'
                  alt='{{this.name}}'
                />
                <div class='card-body p-3'>
                  <h6 class='card-title mb-1'>{{this.name}}</h6>
                  <div class='restaurant-category mb-1'>
                    <i class='fas fa-utensils pr-2'></i>
                    {{this.category}}
                  </div>

                  <span
                    class='badge badge-pill badge-danger font-weight-normal'
                  >
                    {{this.rating}}
                    <i class='fas fa-star fa-xs'></i>
                  </span>
                </div>
                <div class='card-footer d-flex justify-content-end flex-wrap'>
                  <a href='/restaurants/{{this._id}}/edit'><button
                      class='btn btn-link btn-sm'
                    >編輯</button></a>
                  <a href='/restaurants/{{this._id}}'><button
                      class='btn btn-link btn-sm'
                    >詳細内容</button></a>
                  <form
                    action='/restaurants/{{this._id}}?_method=DELETE'
                    method='POST'
                  >
                    <button
                      type='submit'
                      class='btn btn-danger btn-sm text-white'
                    >刪除</button>
                  </form>
                </div>
              </div>
            </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

{{else}}
  {{! alert message }}
  <div class='alert alert-danger text-center m-5' role='alert'>
    No restaurant had been found with your keyword: "{{keyword}}" !
  </div>

{{/if}}